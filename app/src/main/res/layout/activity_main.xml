<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center">

        <TextView
            android:id="@+id/bcStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:text="STATUS" />

        <EditText
            android:id="@+id/inBcAction"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Broadcast Action"
            android:text="com.nangirvan.mybroadcastsender.TEST" />

        <EditText
            android:id="@+id/inBcName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Broadcast Name"
            android:text="BROADCAST_NAME" />

        <EditText
            android:id="@+id/inBcValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Broadcast Value"
            android:text="BROADCAST_VALUE" />

        <Button
            android:id="@+id/btnSend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Send" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>